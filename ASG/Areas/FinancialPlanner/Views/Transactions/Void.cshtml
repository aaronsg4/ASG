@model ASG.Areas.FinancialPlanner.Models.Transaction
@{ Layout = null;}
@{
    ViewBag.Title = "TransactionReconcileModal";
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><img src="~/Areas/FinancialPlanner/FP_Images/fp.png" /></h4>
    </div>
    <div class="modal-body fpModal">
        <div class="container">
            <div class="row">
            </div>
        </div>
        Are you sure you want to void this transaction?
        <div>
            <hr />
            <dl class="dl-flex">
                <dt>
                    Transaction Category
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TransactionCategory.Name)
                </dd>
                <dt>
                    Type of transaction
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TransactionType.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt>
                    Created Date
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
                <dt>
                    Updated Date
                </dt>
                @if (Model.UpdatedDate != null)
                {
                    <dd>
                        @Html.DisplayFor(model => model.UpdatedDate)
                    </dd>
                }
                else
                {
                    <dd>
                        N/A
                    </dd>
                }
                <dt>
                    Submitted By
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SubmitterUser.DisplayName)
                </dd>
            </dl>
            @using (Html.BeginForm("VoidConfirmed", "Transactions"))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div class="form-actions no-color">
                    <input type="submit" value="Void" class="btn btn-default" style="width:150px; float:right" />
                    @Html.HiddenFor(m => m.BudgetId)
                </div><br /><br />
            }
        </div>
    </div>
</div>