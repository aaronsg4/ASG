@model ASG.Areas.FinancialPlanner.Models.Transaction
@{ Layout = null;}
@{
    ViewBag.Title = "Details";
}


<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><img src="~/Areas/FinancialPlanner/FP_Images/fp.png" /></h4>
    </div>
    <div class="modal-body fpModal">
        <div class="container">
            <div class="row">
                Transaction Details
            </div>
        </div>        
        <div>
            <hr />
            <dl class="dl-flex">
                <dt>
                    @Html.DisplayNameFor(model => model.TransactionCategory.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TransactionCategory.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.TransactionType.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TransactionType.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt>
                    Created Date
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
                <dt>
                    Updated Date
                </dt>
                @if (Model.UpdatedDate != null)
                {
                    <dd>
                        @Html.DisplayFor(model => model.UpdatedDate)
                    </dd>
                }
                else
                {
                    <dd>
                        N/A
                    </dd>
                }
            </dl>
        </div>     
    </div>    
</div>