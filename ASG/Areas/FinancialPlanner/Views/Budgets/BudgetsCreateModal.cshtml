
@model ASG.Areas.FinancialPlanner.Models.Budget
@using Microsoft.AspNet.Identity


@{ var userid = User.Identity.GetUserId();

}


@{
    ViewBag.Title = "BudgetsCreateModal";
}
<div class="modal-content" id="CreateABudget">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><img src="~/Areas/FinancialPlanner/FP_Images/fp.png" /></h4>
    </div>
    <div class="modal-body fpModal" style="padding-bottom:35px">
        <form id="CreateBudgets">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                Enter a Budget Name
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                How much do you want to spend?
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                    </div>
                </div>
                What is this budget for?
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                Duration
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownList("BudgetDurationPeriodId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BudgetDurationPeriodId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10" style="margin-top:15px">
                        <span id="budgetCreationErrors" style="color:lime">
                        </span><br />
                        <input type="button" value="Create Budget" class="btn btn-default" style="float:left;" id="BudgetCreator" onclick="createABudget()" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


