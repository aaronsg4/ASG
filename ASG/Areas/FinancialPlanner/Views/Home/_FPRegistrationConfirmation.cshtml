
@using ASG.Models
@model ASG.Models.AddRegistrationViewModel
@*@model ASG.Models.UserRoles*@




@{
    ViewBag.Title = "Registration confirmation";
}


<div class="modal fade" id="FinancialPlannerRegistrationConfirmation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="background-color:rgba(0, 0, 0, 0.7)">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><img src="~/Areas/FinancialPlanner/FP_Images/fp.png" />&nbsp;&nbsp;&nbsp;&nbsp;Thank you for registering.</h4>
                </div>
                <div class="modal-body fpModal" style="padding-bottom:35px">
                    <div>
                        <div style="text-align:left">
                            <p>
                                In addition to registering for the Financial Planner, you are now able to sign up for our other applications - the Blog and the BugTracker.
                            </p>
                            <p>
                                Simply select from the choices below to give yourself quick and simple access to all applications.
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6" style="text-align:left">
                            <section id="additionalRegistrationsForm">
                                @using (Html.BeginForm("AddRegistration", "Account", new { area = "", ReturnUrl = ViewBag.ReturnUrl, Application = ViewBag.Application }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "additionalRegistrationForm" }))
                                {
                                    @Html.HiddenFor(m => m.Application, new { Value = "Blog" })
                                    <div class="col-md-3"></div>
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(m => m.Blog)
                                                <span>@Html.LabelFor(m => m.Blog)</span>
                                            </div>
                                            <div class="col-md-3"></div>
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(m => m.FinancialPlanner)
                                                <span>@Html.LabelFor(m => m.FinancialPlanner)</span>
                                            </div>
                                            <div class="col-md-3"></div>
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(m => m.BugTracker)
                                                <span>@Html.LabelFor(m => m.BugTracker)</span>
                                            </div>
                                }
                            </section>
                        </div>
                    </div>
                    <div style="color:lime; text-align:left; margin:15px; font-size:14px; line-height:1" id="AdditionalRegistrationMessage"></div>
                </div>
                <div class="modal-footer" style="text-align:center; padding-top:20px; padding-bottom:0px!important">
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block  letter-spacing-3" id="FinancialPlannerAdditionalRegisterSubmit" value="Add me" />
                        <button type="button" class="btn btn-lg btn-secondary btn-block  letter-spacing-3" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




