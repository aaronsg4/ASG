
@{
    ViewBag.Title = "Reset password confirmation";
}


<div class="modal fade" id="FPForgotPasswordConfirmation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="background-color:rgba(0, 0, 0, 0.7)">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><img src="~/Areas/FinancialPlanner/FP_Images/fp.png" /></h4>
                </div>
                <div class="modal-body fpModal" style="padding-bottom:35px">                 
                            <div>
                                <p>
                                    Please check your email to reset your password.
                                </p>
                            </div>
                        </div>
                        <div class="modal-footer" style="text-align:center; padding-top:20px">
                            <div class="form-group">
                                <button type="button" class="btn btn-lg btn-secondary btn-block  letter-spacing-3" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



