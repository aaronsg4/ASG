@model ASG.Areas.FinancialPlanner.Models.Invitations
@{ Layout = null;}
@{
    ViewBag.Title = "CreateInvitationsModal";
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><img src="~/Areas/FinancialPlanner/FP_Images/fp.png" /></h4>
    </div>

    <div class="modal-body fpModal" style="padding-bottom:35px">
        @using (Html.BeginForm("Create", "Invitations", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                Invite others to join
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.SenderUserId)
                @Html.HiddenFor(m => m.Accepted)
                @Html.HiddenFor(m => m.Expired)
                @Html.HiddenFor(m => m.CreatedDate)
                @Html.HiddenFor(m => m.ExpirationDate)
                @Html.HiddenFor(m => m.HouseholdId)

                <div class="form-group">
                    <div style="margin:15px">Where do you want to send this invitation to?  Enter the recipient's email below.</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ToEmail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ToEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Invite!" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
