@model ASG.Areas.FinancialPlanner.Models.FinancialAccount

@{
    ViewBag.Title = "Details";
}


<div class="container-fluid">
    <!-- Page heading -->
    <!-- Matter -->
    <div class="matter">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="page-head">
                        <h5 class="pull-left">
                            <i class="fa fa-file-o"></i>&nbsp;&nbsp;
                            @Model.Name
                            Statement
                        </h5>
                        <!-- Breadcrumb -->
                        <div class="clearfix"></div>
                        <button type="button" class="btn btn-hollow" style="cursor:pointer; margin: 30px;">@Html.ActionLink("Edit", "Edit", new { id = Model.Id })</button>
                    </div>
                    <div class="widget">
                        <div class="widget-head">
                            <div class="pull-left">Statement</div>
                            <div class="widget-icons pull-right">
                                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <div class="padd statement">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="well">
                                            <h2>@Model.ActualBalance</h2>
                                            <p>Current Balance</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <hr />
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover table-responsive table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Name</th>
                                                        <th>Amount</th>
                                                        <th>Date</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var transaction in Model.Transactions)
                                                    {
                                                        if (transaction.Void != true)
                                                        {
                                                            <tr>
                                                                <td>@transaction.Id</td>
                                                                <td>@transaction.Title</td>
                                                                <td>@transaction.Amount</td>
                                                                <td>@transaction.CreatedDate</td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="widget-foot">
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <br /><br />
                </div>
            </div>
        </div>
    </div>
    <!-- Matter ends -->
</div>
