@model ASG.Areas.FinancialPlanner.Models.FinancialAccount
@{ Layout = null;}
@{
    ViewBag.Title = "Delete";
}
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><img src="~/Areas/FinancialPlanner/FP_Images/fp.png" /></h4>
    </div>
    <div class="modal-body fpModal" style="padding-bottom:35px">
        <hr />
        <dl class="dl-flex">
            <dt>
              Account Type
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AccountType.Name)
            </dd>
            <dt>
                Household
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Household.Name)
            </dd>
            <dt>
               Account Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt>
               Actual Balance
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ActualBalance)
            </dd>
            <dt>
              Reconciled Balance
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ReconciledBalance)
            </dd>
            <dt>
             Created Date
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt>
               Updated Date
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UpdatedDate)
            </dd>
            @Html.HiddenFor(model => model.Include)     
        </dl>
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                @{ var user = User.Identity;}
                @if (user.Name == "GuestUser@mailinator.com")
                {
                    <input type="submit" value="Delete" class="btn btn-primary" style="float:right;  width:120px" disabled="disabled" />
                }
                else
                {
                    <input type="submit" value="Delete" class="btn btn-primary" style="float:right; width:120px" /> 
                }   
            </div>
        }
    </div>   
</div>

