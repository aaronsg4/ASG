@model ASG.Areas.FinancialPlanner.Models.Household

@{
    ViewBag.Title = "Delete";
}
@{Layout = null;}
<div class="modal-content" id="">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><img src="~/Areas/FinancialPlanner/FP_Images/fp.png" /></h4>
    </div>
    <div class="modal-body fpModal" style="padding-bottom:35px">
        <p>Once you leave this household you will not be able to rejoin it unless you are invited.  Are you sure you want to leave the household?</p>
        <dl class="dl-flex">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                Created Date
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            <div class="form-actions no-color">
                @{ var user = User.Identity;}
                @if (user != null)
                {
                    if (user.Name == "Administrator@Mailinator.com" || user.Name == "ProjectManager@Mailinator.com" || user.Name == "Developer@Mailinator.com" || user.Name == "GuestUser@mailinator.com")
                    {
                        <input type="submit" value="Leave Household" name="button" class="btn btn-default" style="display:block; float:right; margin-top:5px" disabled="disabled" />
                    }
                    else
                    {
                        <a class="btn btn-default" href="@Url.Action("LeaveHouseholdConfirm", "Households", new {id = Model.Id })">Leave Household</a>
                    }
                }
                <br />
            </div>
                    }
    </div>
</div>