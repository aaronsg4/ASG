@model ASG.Areas.FinancialPlanner.Models.TransactionCategory

@{
    ViewBag.Title = "Edit";
}
@{ Layout = null;}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><img src="~/Areas/FinancialPlanner/FP_Images/fp.png" /></h4>
    </div>

    <div class="modal-body fpModal" style="padding-bottom:35px">
        @using (Html.BeginForm("Edit", "TransactionCategories"))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                Transaction Category
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CreatedDate)
                <input type="hidden" name="TransactionId" value="@ViewBag.transactionid" />
                @{ TempData["Data1"] = ViewBag.transactionid;}
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                Do you want to add a description for the changed name?
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Save" class="btn btn-default" name="button" style="width:180px" />
                        <input type="submit" value="Delete" class="btn btn-default" name="button" style="width:180px" />
                        <input type="submit" value="Update just this transaction" class="btn btn-default" name="button" style="width:363px; margin-top:3px" />
                        
                    </div>
                </div>
            </div>
                    }
    </div>  
</div>
