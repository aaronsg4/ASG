@using ASG.Models
@model ASG.Models.AddRegistrationViewModel

@{
    ViewBag.Title = "Registration confirmation";
}




<div class="modal fade" id="BugTrackerAccess" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="background-color:rgba(0, 0, 0, 0.7)">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div class="modal-header mdtitle">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title inner-brand" id="myModalLabel"></h4>
                </div>
                <div class="modal-body" style="width:90%; text-align:center; padding:30px 50px 20px 50px; margin:auto">                 
                    <div>
                        <h3>It looks like you are registered, but don't yet have full access to the BugTracker.</h3>
                        <p>In order to view the BugTracker, you'll need full access.  Would you like to add this now?</p>
                        
                        <div style="margin-bottom:8px; margin-top:50px">
                            <section id="additionalBlogAccessForm">
                                @using (Html.BeginForm("AddRegistration", "Account", new { area = "", ReturnUrl = ViewBag.ReturnUrl, Application = ViewBag.Application }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "BugTrackerAccessForm" }))
                                {
                                    @Html.HiddenFor(m => m.Application, new { Value = "BugTracker" })
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.BugTracker)
                                        <span>Yes, Give me full access!</span>
                                    </div>
                                }
                            </section><br /><br />
                            <div style="color:lime; text-align:left; margin:15px; font-size:14px; line-height:1" id="AdditionalBugTrackerAccessMessage"></div>
                        </div>
                        <br /><br />
                        <p>If you choose to decline access, you will be logged out. You can still experience the BugTracker's full functionality through the DEMO roles.</p>
                    </div>
                </div>
                <div class="modal-footer" style="text-align:center; margin-top:10px">
                    <div class="form-group">                     
                        <input class="btn btn-lg btn-primary btn-block  letter-spacing-3" id="BugTrackerAddAccessSubmit" value="Add me" style="margin:25px; width:90%; margin:auto" />
                        <button type="button" class="btn btn-lg btn-secondary btn-block  letter-spacing-3" data-dismiss="modal" style="margin:25px; width:90%; margin:auto" onclick="logout()">No Thanks</button>                     
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

