
@model ASG.Areas.BugTracker.Models.ProjectAssignViewModel

@{
    ViewBag.Title = "Assign Users to Project";
}
<div class="container-fluid">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 well" style="align-content:center;margin-top:75px">
            <br />
            <div class="row">
                <div class="col-sm-10"><h2 style="font-family:'Lato',sans-serif;">Assign team members to this Project</h2><br /></div>
                <div class="col-sm-2">
                    <img src="~/Areas/BugTracker/BugTracker_Images/bug-1296767.png" style="height:30px" />
                </div>
            </div>
            <p>Please choose from the list below to assign team members to this project.</p>
            <div class="form-horizontal">
                <hr />
                @using (Html.BeginForm("ProjectAssign", "Projects", FormMethod.Post, null))
            {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.projectId)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <p style="padding-left:15px"></p>
                        <div class="col-md-10">
                            @Html.ListBox("selectedvalue", Model.Users, new { @class = "form-control", @style = "width: 100%; height: 200px" })
                            @Html.ValidationMessageFor(model => model.Users, "", new { @class = "text-danger" })<br />
                            <input type="submit" value="Assign" name="button" class="btn btn-default" style="width:150px; float:right" /><br /><br /><br />
                            <span style="float:right">@Html.ActionLink("Back to List", "Index")</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
